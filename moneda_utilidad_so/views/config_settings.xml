<odoo>
  <data>
    <record id="moneda_dolares_setting" model="ir.ui.view">
      <field name="name">moneda.dolares.setting</field>
      <field name="model">res.config.settings</field>
      <field name="inherit_id" ref="sale.res_config_settings_view_form" />
      <field name="arch" type="xml">
        <xpath expr="//div[1]/div[4]" position="after">
          <div class="col-12 col-lg-6 o_setting_box" title="Tomar costo en dolares">
            <div class="o_setting_left_pane">
              <field name="costo_dolares" />
            </div>
            <div class="o_setting_right_pane">
              <label for="costo_dolares" />
              <div class="text-muted">
                Tomar costo en dolares
                </div>
            </div>
          </div>
        </xpath>
      </field>
    </record>
  </data>
</odoo>